<package xmlns="http://expath.org/ns/pkg" name="${package-name}-${user.name}" abbrev="${project.artifactId}-${user.name}" version="${project.version}"
	spec="1.0">
	<title>${package-title}, ${user.name}</title>
	<dependency package="http://exist-db.org/apps/shared" />
	<dependency package="http://exist-db.org/apps/xsltforms" />
	<dependency package="http://xqilla.sourceforge.net/pkg/xqjson" />
	<dependency package="http://www.functx.com" />
	<author>Wolfgang Meier</author>
	<author>Adam Retter</author>
	<author>Dan McCreary</author>
	<author>Jens Ã˜stergaard Petersen</author>
	<author>Dulip Withanage</author>
	<author id="cteodorescu">Claudius Teodorescu</author>
	<author>Matthias Guth</author>
	<website>${project.url}</website>
	<license>GNU-LGPL</license>
	<copyright>true</copyright>
	<type>application</type>
	<target>${project.artifactId}-${user.name}</target>
	<permissions user="editor" password="editor" group="biblio.users" mode="0444" />
	<status>stable</status>
	<prepare>pre-install.xql</prepare>
	<finish>post-install.xq</finish>
	<tag>tamboti</tag>
	<tag>${package-type}</tag>
	<tag>exist</tag>
	<category id="libs">Libraries</category>
	<category id="exist">eXist extensions</category>
	<fileSets>
		<fileSet>
			<directory>${basedir}</directory>
			<outputDirectory>/</outputDirectory>
			<excludes>
				<exclude>build/</exclude>
				<exclude>target/</exclude>
				<exclude>pom.xml</exclude>
				<exclude>themes/tamboti/pages/page.html</exclude>
				<exclude>modules/config.xqm</exclude>
				<exclude>themes/default/pages/search-form.html</exclude>
				<exclude>themes/tamboti/pages/search-form.html</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>${project.build.directory}/maven-replacer-plugin</directory>
			<outputDirectory>/themes/tamboti/pages</outputDirectory>
			<includes>
				<include>page.html</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.build.directory}/maven-replacer-plugin</directory>
			<outputDirectory>/modules</outputDirectory>
			<includes>
				<include>config.xqm</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.build.directory}/maven-replacer-plugin</directory>
			<outputDirectory>/themes</outputDirectory>
			<includes>
				<include>default/pages/search-form.html</include>
				<include>tamboti/pages/search-form.html</include>
			</includes>
		</fileSet>		
	</fileSets>
</package>
