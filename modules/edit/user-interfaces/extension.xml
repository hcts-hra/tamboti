<?xml version="1.0" encoding="UTF-8"?>
<!--node insertions: insertion and deletion does not work, but this does not matter, since elements are inserted in edit.xq--><!--missing element insertion: does not work, but this does not matter, since elements are inserted in edit.xq--><!--hints moved to code-table: OK--><!--hints linked with id: OK--><!--hints checked: OK--><!--saving of all nodes: OK--><!--schema instantiated: n/a--><!--schema notations added: n/a-->
<div xmlns="http://www.w3.org/1999/xhtml" xmlns:ext="http://exist-db.org/mods/extension" xmlns:ev="http://www.w3.org/2001f/xml-events" xmlns:xf="http://www.w3.org/2002/xforms" xmlns:xlink="http://www.w3.org/1999/xlink" id="user-interface-container" class="extension block-form" tab-id="extension">
    <div style="display:none">
        <xf:model id="m-ui">
            <xf:instance id="i-code-tables" src="get-code-tables.xq?code-table-ids=document-type%2ctransliteration%2ccataloging-stage">
                <code-tables xmlns="http://hra.uni-heidelberg.de/ns/mods-editor/"/>
            </xf:instance>
        </xf:model>
    </div>
    <xf:group model="m-main" ref="instance('save-data')">
        <fieldset class="level-1">
            <xf:group appearance="minimal" class="label-box">
                <xf:output value="'Extension'" class="hint-icon">
                    <xf:hint ref="id('hint-code_extension', instance('i-hint-codes'))/*:help"/>
                </xf:output>
            </xf:group>
            <xf:repeat nodeset="instance('save-data')/mods:extension" id="extension-repeat">
                <xf:group appearance="full">
                    <xf:group ref=".[not(ext:template)] | .[not(ext:transliterationOfResource)]">
                        <xf:switch>
                            <xf:case id="extension-add-node-hide">
                                <div class="open-close-button">
                                    <xf:trigger class="add-button">
                                        <xf:label>&gt;</xf:label>
                                        <xf:toggle case="extension-add-node-unhide" ev:event="DOMActivate"/>
                                    </xf:trigger>
                                </div>
                            </xf:case>
                            <xf:case id="extension-add-node-unhide">
                                <div class="open-close-button">
                                    <xf:trigger>
                                        <xf:label>&lt;</xf:label>
                                        <xf:toggle case="extension-add-node-hide" ev:event="DOMActivate"/>
                                    </xf:trigger>
                                </div>
                                <div class="node-adds">
                                    <xf:group ref=".[not(ext:template)] | .[not(ext:transliterationOfResource)]">
                                        <xf:trigger ref=".[not(ext:template)]" class="add-button">
                                            <xf:label class="xforms-group-label-centered">Add Tamboti Template</xf:label>
                                            <xf:action ev:event="DOMActivate">
                                                <xf:toggle case="extension-add-node-hide" ev:event="DOMActivate"/>
                                                <xf:insert nodeset="ext:template" at="index('extension-repeat')" position="before" origin="instance('insert-templates')/ext:template"/>
                                            </xf:action>
                                        </xf:trigger>
                                        <xf:trigger ref=".[not(ext:transliterationOfResource)]" class="add-button">
                                            <xf:label class="xforms-group-label-centered">Add Transliteration Of Resource</xf:label>
                                            <xf:action ev:event="DOMActivate">
                                                <xf:toggle case="extension-add-node-hide" ev:event="DOMActivate"/>
                                                <xf:insert nodeset="ext:template" at="index('extension-repeat')" position="before" origin="instance('insert-templates')/ext:template"/>
                                            </xf:action>
                                        </xf:trigger>
                                    </xf:group>
                                </div>
                            </xf:case>
                        </xf:switch>
                    </xf:group>
                    <xf:select1 ref="ext:template">
                        <xf:label>
                            <xf:output value="'Tamboti Template'" class="hint-icon">
                                <xf:hint ref="id('hint-code_template', instance('i-hint-codes'))/*:help"/>
                            </xf:output>
                        </xf:label>
                        <xf:itemset nodeset="id('document-type', instance('code-tables'))/*:items/*:item" model="m-ui">
                            <xf:label ref="*:label"/>
                            <xf:value ref="*:value"/>
                        </xf:itemset>
                    </xf:select1>
                    <xf:select1 ref="ext:transliterationOfResource">
                        <xf:label>
                            <xf:output value="'Transliteration Of Resource'" class="hint-icon">
                                <xf:hint ref="id('hint-code_transliterationOfResource', instance('i-hint-codes'))/*:help"/>
                            </xf:output>
                        </xf:label>
                        <xf:itemset nodeset="id('transliteration', instance('code-tables'))/*:items/*:item" model="m-ui">
                            <xf:label ref="*:label"/>
                            <xf:value ref="*:value"/>
                        </xf:itemset>
                    </xf:select1>
                    <xf:select1 ref="ext:catalogingStage">
                        <xf:label>
                            <xf:output value="'Cataloging Stage'" class="hint-icon">
                                <xf:hint ref="id('hint-code_cataloging-stage', instance('i-hint-codes'))/*:help"/>
                            </xf:output>
                        </xf:label>
                        <xf:itemset nodeset="id('cataloging-stage', instance('code-tables'))/*:items/*:item" model="m-ui">
                            <xf:label ref="*:label"/>
                            <xf:value ref="*:value"/>
                        </xf:itemset>
                    </xf:select1>
                </xf:group>
            </xf:repeat>
            <xf:group appearance="full" ref=".[not(mods:extension)]">
                <xf:trigger class="add-button">
                    <xf:label class="xforms-group-label-centered">Add Missing Extension</xf:label>
                    <xf:insert nodeset="instance('save-data')/mods:extension" origin="instance('insert-templates')/mods:extension" ev:event="DOMActivate"/>
                </xf:trigger>
            </xf:group>
        </fieldset>
    </xf:group>
</div>